application: martregistry [
  documentation: "Show Biomart registries listed
                  on a host"
  groups: "Edit"
    relations: "0000088 topic Literature and documentation"
    relations: "0000091 topic Database and file management"
    relations: "0000516 operation Database information retrieval"
]

section: input [
  information: "Input section"
  type: "page"
]

  string: host [
    standard: "Y"
    default: "www.biomart.org"
    information: "Host location"
    relations: "0001047 data URI"
  ]

  string: path [
    standard: "Y"
    default: "/biomart/martservice"
    information: "Path to martservice"
    relations: "0001049 data Directory name"
  ]

  integer: port [
    default: "80"
    information: "Port on host"
    relations: "0001773 data Tool-specific parameter"
  ]

endsection: input

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    information: "Mart registry output file"
    relations: "0000969 data Free text"
  ]

endsection: output
