application: isochore [
  documentation: "Plots isochores in DNA sequences"
  groups: "Nucleic:Composition"
    relations: "0000157 topic Sequence composition"
    relations: "0000430 operation CpG island and isochores identification"
]

section: input [
  information: "Input section"
  type: "page"
]

  sequence: sequence [
    parameter: "Y"
    type: "dna"
    relations: "0001215 data Pure DNA sequence"
    relations: "0000849 data Sequence record"
  ]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]

  integer: window [
    additional: "Y"
    default: "1000"
    minimum: "1"
    maximum: "@($(sequence.end)/2)"
    failrange: "N"
    trueminimum: "Y"
    information: "Window size"
    warnrange: "N"                                  
    relations: "0001251 data Window size"
  ]

  integer: shift [
    additional: "Y"
    default: "100"
    minimum: "1"
    maximum: "@($(sequence.end)/10)"
    information: "Shift increment"
    failrange: "N"
    trueminimum: "Y"  
    warnrange: "N"                                  
    relations: "0002141 data Window step size"
  ]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    extension: "iso"
    knowntype: "isochore output"
    relations: "0001304 data CpG island and isochore report"
  ]

  xygraph: graph [
    standard: "Y"
    relations: "0001304 data CpG island and isochore report"
  ]

endsection: output
