application: makeprotseq [
  documentation: "Create random protein sequences"
  groups: "Edit"
    relations: "0000156 topic Sequence editing"
    relations: "0000364 operation Random sequence generation"
]

section: input [
  information: "Input section"
  type: "page"
]

  infile: pepstatsfile [
    standard: "Y"
    information: "Pepstats program output file (optional)"
    help: "This file should be a pepstats output file. Protein
           sequences will be created with the composition in the pepstats
           output file."
    nullok: "Y"
    knowntype: "pepstats output"
    relations: "0000897 data Protein physicochemical property"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  integer: amount [
    standard: "Y"
    default: "100"
    minimum: "1"
    information: "Number of sequences created"
    relations: "0001694 data Number of output entities"
  ]

  integer: length [
    standard: "Y"
    default: "100"
    minimum: "1"
    information: "Length of each sequence"
    relations: "0001249 data Sequence length"
  ]

  toggle: useinsert [
    additional: "Y"
    information: "Do you want to make an insert"
    default: "N"
    relations: "0002135 data Toggle"
  ]

  string: insert [
    standard: "$(useinsert)"
    information: "Inserted string"
    help: "String that is inserted into sequence"
    knowntype: "sequence"
    relations: "0000848 data Sequence"
  ]

  integer: start [
    standard: "$(useinsert)"
    information: "Start point of inserted sequence"
    minimum: "1"
    default: "1"
    relations: "0001016 data Sequence position"
  ]

endsection: required

section: output [
  information: "Output section"
  type: "page"
]

  seqoutall: outseq [
    parameter: "Y"
    type: "protein"
    name: "makeseq"
    relations: "0001219 data Pure protein sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

endsection: output
