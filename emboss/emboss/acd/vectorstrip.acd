application: vectorstrip [
  documentation: "Removes vectors from the ends of nucleotide sequence(s)"
  groups: "Edit"
    relations: "0000156 topic Sequence editing"
    relations: "0000369 operation Sequence cutting"
    relations: "0000266 operation Vector sequence identification"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence [
    parameter: "Y"
    type: "dna"
    relations: "0001215 data Pure DNA sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

  section: vectorfilesection [
    information: "Vector input options"
    type: "frame"
  ]

    toggle: readfile [
      parameter: "Y"
      default: "Y"
      information: "Are your vector sequences in a file?"
    relations: "0002135 data Toggle"
    ]

    infile: vectorsfile [
      standard: "$(readfile)"
      nullok: "Y"
      default: ""
      information: "Cloning vector definition file (optional)"
      knowntype: "vector"
    relations: "0000850 data Sequence set"
    ]

  endsection: vectorfilesection

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  integer: mismatch [
    standard: "Y"
    default: "10"
    information: "Max allowed % mismatch"
    relations: "0002146 data Threshold"
  ]

  boolean: besthits [
    standard: "Y"
    default: "Y"
    information: "Show only the best hits (minimise
                  mismatches)?"
    relations: "0002135 data Toggle"
  ]

  string: alinker [
    standard: "@(!$(readfile))"
    information: "The 5' sequence"
    knowntype: "nucleotide sequence"
    relations: "0001210 data Pure nucleotide sequence"
  ]

  string: blinker [
    standard: "@(!$(readfile))"
    information: "The 3' sequence"
    knowntype: "nucleotide sequence"
    relations: "0001210 data Pure nucleotide sequence"
  ]

endsection: required

section: output [
  information: "Output section"
  type: "page"
]

  boolean: allsequences [
    additional: "Y"
    information: "Show all sequences in output"
    default: "N"
    outputmodifier: "Y"
    relations: "0002135 data Toggle"
  ]

  outfile: outfile [
    parameter: "Y"
    knowntype: "vectorstrip output"
    relations: "0001678 data Tool log"
  ]

  seqoutall: outseq [
    parameter: "Y"
    relations: "0001215 data Pure DNA sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

endsection: output
