application: hmoment [
  documentation: "Calculate and plot hydrophobic moment for protein sequence(s)"
  groups: "Protein:2D Structure"
    relations: "0000137 topic Protein hydropathy"
    relations: "0000407 operation Protein hydrophobic moment calculation"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: seqall [
    parameter: "Y"
    type: "protein"
    relations: "0001219 data Pure protein sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]

  integer: window [
    additional: "Y"
    default: "10"
    information: "Window"
    relations: "0001251 data Window size"
  ]

  integer: aangle [
    additional: "Y"
    default: "100"
    information: "Alpha helix angle (degrees)"
    relations: "0001773 data Tool-specific parameter"
  ]

  integer: bangle [
    additional: "Y"
    default: "160"
    information: "Beta sheet angle (degrees)"
    relations: "0001773 data Tool-specific parameter"
  ]

endsection: additional

section: advanced [
  information: "Advanced section"
  type: "page"
]

  float: baseline [
    default: "0.35"
    information: "Graph marker line"
    relations: "0002152 data Rendering parameter"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  toggle: plot [
    default: "N"
    information: "Produce graphic"
    relations: "0002135 data Toggle"
  ]

  boolean: double [
    default: "N"
    information: "Plot two graphs"
    relations: "0002135 data Toggle"
  ]

  xygraph: graph [
    standard: "$(plot)"
    relations: "0001520 data Peptide hydrophobic moment"
  ]

  outfile: outfile [
    standard: "@(!$(plot))"
    knowntype: "hmoment output"
    nullok: "$(plot)"
    nulldefault: "$(plot)"
    relations: "0001520 data Peptide hydrophobic moment"
  ]

endsection: output
