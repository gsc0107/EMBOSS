application: cutgextract [
  documentation: "Extract data from CUTG"
  groups: "Utils:Database creation"
]

section: input [
  information: "input Section"
  type: "page"
]

  dirlist: directory  [
    parameter: "Y"
    required: "Y"
    prompt: "CUTG directory"
  ]

endsection: input

section: advanced [
  information: "advanced Section"
  type: "page"
]

  string: wildspec  [
    required: "N"
    default: "*.codon"
    information: "Type of codon file"
  ]

endsection: advanced
