application: mwcontam [
  documentation: "Shows molwts that match across a set of
                  files"
  groups: "Protein:Composition"
]

section: input [
  information: "input Section"
  type: "page"
]

  filelist: files  [
    parameter: "Y"
    information: "Comma separated file list"
  ]

endsection: input

section: required [
  information: "required Section"
  type: "page"
]

  float: tolerance  [
    required: "Y"
    information: "ppm tolerance"
    default: "50.0"
  ]

endsection: required

section: output [
  information: "output Section"
  type: "page"
]

  outfile: outfile  [
    parameter: "Y"
    extension: "mwcontam"
  ]

endsection: output
