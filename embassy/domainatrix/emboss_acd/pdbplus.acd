application: pdbplus [
  documentation: "Add residue solvent accessibility and secondary structure data to
      a CCF file (clean coordinate file) for a protein or domain."
  groups: "Utils:Database creation"
  gui:   "yes"
  batch: "yes"
  cpu:   "medium"
  embassy: "domainatrix"
]

section: 
input 
[ 
information: "Input section" 
type: page 
]

dirlist: ccfin
[
  parameter: "Y"
  information: "Location of CCF files (clean coordinate files) (input)"
  help: "This option specifies the location of CCF files (clean coordinate files) (input).
          A 'clean cordinate file' contains protein coordinate and derived data for a 
          single PDB file ('protein clean coordinate file') or a single domain from SCOP or CATH ('domain clean coordinate file'), in CCF format (EMBL-like).  The files, generated by using PDBPARSE (PDB files) or DOMAINER (domains), contain 'cleaned-up' data that is self-consistent and error-corrected. Records for residue solvent accessibility and secondary structure are added to the file by using PDBPLUS."
  default: "./"
  extension: "ccf"
 knowntype: "Clean coordinate files"
]


directory: pdbin
[
  parameter: "Y"
  information: "Location of PDB files (input)"
  help: "This option specifies the location of PDB files (input).  A PDB file contains 
	protein coordinate and other data.  A detailed explanation of the PDB file format is available 
    on the PDB web site http://www.rcsb.org/pdb/info.html"
  default: "./" 
  extension: "ent"
  knowntype: "PDB files"
]
endsection: input




section: required 
[ 
information: "Required section" 
type: page 
]

string: pdbprefix
[
  standard: "Y"
  information: "File prefix of PDB files (if any)"
  help: "This option specifies the file prefix of PDB files (if any)"
  knowntype: "PDB file prefix"
  default: ""
]

list: mode  [
  standard: "Y"
  default: "1"
  minimum: "1"
  maximum: "3"
  delimiter: ","
  codedelimiter: ":"
  values: "1: Use STRIDE only, 2: Use NACCESS only, 3: Use STRIDE and NACCESS"
  header: "Mode of operation"
  information: "Select mode"
  help: "This option specifies the mode of operation."
]
integer: thresholdsize
[
    standard: "@($(mode)!=2)"
    information: "Threshold size for SSEs (secondary structure elements)"
  help: "This option specifies the threshold size for SSEs (secondary structure elements)"
    default: "4"
]
endsection: required


section: output 
[ 
information: "Output section" 
type: page 
]

directory: ccfout
[
  parameter: "Y"
  information: "Location of CCF files (clean coordinate files) (output)"
  help: "This option specifies the location of CCF files (clean coordinate files) (output). A 'clean cordinate file' contains protein coordinate and derived data for a single PDB file ('protein clean coordinate file') or a single domain from SCOP or CATH ('domain clean coordinate file'), in CCF format (EMBL-like).  The files, generated by using PDBPARSE (PDB files) or DOMAINER (domains), contain 'cleaned-up' data that is self-consistent and error-corrected. Records for residue solvent accessibility and secondary structure are added to the file by using PDBPLUS."
  default: "./"
  extension: "ccf"
 knowntype: "Clean coordinate files"
]

outfile: errfile 
[
  standard: "Y"
  information: "Name of log file for PDBPLUS"
  help: "This option specifies the name of the log file for PDBPLUS"
  default: "pdbplus.log"
  knowntype: "PDBPLUS log file"
]

outfile: serrfile  
[
  standard: "@($(mode)!=2)"
  information: "Name of log file for STRIDE"
  help: "This option specifies the name of the log file for STRIDE"
  default: "stride.log"
  knowntype: "PDBPLUS STRIDE log file"
]

outfile: nerrfile  
[
  standard: "@($(mode)!=1)"
  information: "Name of log file for NACCESS"
  help: "This option specifies the name of the log file for NACCESS"
  default: "naccess.log"
  knowntype: "PDBPLUS NACCESS log file"
]

endsection: output



