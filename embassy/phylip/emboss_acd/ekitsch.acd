application: ekitsch [
  documentation: "Fitch-Margoliash method with contemporary
                  tips"
  groups: "phylip"
  gui: "yes"
  batch: "yes"
  cpu: "high"
]

infile: infile  [
  parameter: "Y"
  prompt: "data file"
]

outfile: outfile  [
  parameter: "Y"
  default: "ekitsch.outfile"
]

boolean: besttree  [
  parameter: "Y"
  default: "Y"
  information: "Search for best tree"
]

float: power  [
  optional: "Y"
  default: "3.0"
  information: "Power"
]

boolean: negbranch  [
  optional: "Y"
  default: "N"
  information: "Negative branch lengths allowed"
]

boolean: random  [
  optional: "$(besttree)"
  default: "N"
  information: "Randomize input order of species"
]

integer: randseed  [
  required: "$(random)"
  information: "Random number seed (must be odd)"
]

integer: randtimes  [
  required: "$(random)"
  information: "Number of times to jumble"
]

boolean: lt  [
  optional: "Y"
  default: "N"
  information: "Lower-triangular data matrix"
]

boolean: ut  [
  optional: "Y"
  default: "N"
  information: "Upper-triangular data matrix"
]

boolean: replicates  [
  optional: "Y"
  default: "N"
  information: "Subreplicates"
]

boolean: multsets  [
  optional: "Y"
  default: "N"
  information: "Analyze multiple data sets"
]

integer: datasets  [
  required: "$(multsets)"
  information: "How many data sets"
]

boolean: printdata  [
  optional: "Y"
  default: "N"
  information: "Print out the data at start of run"
]

boolean: progress  [
  optional: "Y"
  default: "N"
  information: "Print indications of progress of run"
]

boolean: drawtree  [
  optional: "Y"
  default: "Y"
  information: "Draw tree"
]

outfile: treefile  [
  required: "Y"
  default: "ekitsch.treefile"
  information: "Tree file name"
  prompt: "Treefile name"
]
