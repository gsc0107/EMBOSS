application: edolpenny [
  documentation: "Penny algorithm Dollo or polymorphism"
  groups: "Phylogeny"
]

infile: datafile  [
  parameter: "Y"
  prompt: "data file"
]

outfile: outfile  [
  parameter: "Y"
  default: "edolpenny.outfile"
]

boolean: dollo  [
  parameter: "Y"
  default: "Y"
  prompt: "Dollo Parsimony method (else Polymorphis)"
]

integer: numgroups  [
  optional: "Y"
  information: "How many groups of 100 trees"
  default: "1000"
]

integer: howoften  [
  optional: "Y"
  information: "How often to report, in trees"
  default: "100"
]

boolean: simple  [
  optional: "Y"
  information: "Branch and bound is simple"
]

boolean: thresh  [
  default: "N"
  information: "Use Threshold parsimony"
]

float: valthresh  [
  required: "$(thresh)"
  minimum: "1.0"
  default: "1.0"
  information: "threshold value"
]

boolean: ancest  [
  optional: "Y"
  default: "N"
  information: "Use ancestral states in input file"
]

boolean: multsets  [
  optional: "Y"
  default: "N"
  information: "Analyze multiple data sets"
]

integer: datasets  [
  required: "$(multsets)"
  minimum: "2"
  default: "2"
  information: "number of sets"
]

boolean: printdata  [
  optional: "Y"
  default: "N"
  information: "Print out the data at start of run"
]

boolean: progress  [
  optional: "Y"
  default: "N"
  information: "Print indications of progress of run"
]

boolean: steps  [
  optional: "Y"
  default: "N"
  information: "Print out steps in each site"
]

boolean: statesatnodes  [
  optional: "Y"
  default: "N"
  information: "Print states at all nodes of tree"
]

boolean: drawtree  [
  optional: "Y"
  default: "Y"
  information: "Draw tree"
]

boolean: trout  [
  parameter: "Y"
  default: "Y"
  information: "Create a tree file"
]

outfile: treefile  [
  required: "$(trout)"
  default: "edolpenny.treefile"
  information: "Tree file name"
  prompt: "Output treefile name"
]
