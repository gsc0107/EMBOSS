application: fdollop [
  documentation: "Dollo and polymorphism parsimony algorithm"
  groups: "Phylogeny:Discrete characters"
  embassy: "phylipnew"
]

section: input [
  information: "Input section"
  type: "page"
]

discretestates: infile  [
  parameter: "Y"
  characters: "01PB?"
  help: "File containing one or more data sets"
  knowntype: "discrete characters"
  information: "Phylip character discrete states file"
]

tree: intreefile [
	parameter: "Y"
	nullok: "Y"
	knowntype: "newick"
	information: "Phylip tree file (optional)"
]

properties: weights [
	additional: "Y"
	characters: "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
	information: "Phylip weights file (optional)"
	nullok: "Y"
        length: "$(infile.discretelength)"
        size: "1"
]

properties: ancfile [
	additional: "Y"
	characters: "01?"
	information: "Ancestral states file"
	nullok: "Y"
        length: "$(infile.discretelength)"
        size: "1"
]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]
list: method  [
	additional: "Y"
	minimum: "1"
	maximum: "1"
	header: "Method"
	values: "d:Dollo;
                 p:Polymorphism"
  	information: "Parsimony method"
  	default: "d"
]

integer: njumble [
	additional: "@(!$(intreefile.isdefined))"
	default: "0"
	minimum: "0"
	information: "Number of times to randomise"
]

integer: seed [
	additional: "$(njumble)"
	information: "Random number seed between 1 and 32767 (must be odd)"
	maximum: "32767"
	minimum: "1"
	default: "1"
]


float: threshold [
	additional: "Y"
	minimum: 0
	information: "Threshold value"
	default: "$(infile.discretesize)" 
]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

outfile: outfile  [
  parameter: "Y"
  knowntype: "dollop output"
  information: "Phylip dollop program output file"
]

toggle: trout [
	additional: "Y"
	default: "Y"
	information: "Write out trees to tree file"
]

outfile: outtreefile  [
  additional: "$(trout)"
  extension: "treefile"
  information: "Phylip tree output file (optional)"
  knowntype: "newick tree"
  nullok: "Y"
]

boolean: printdata [
	additional: "Y"
	default: "N"
	information: "Print data at start of run"
]

boolean: progress [
	additional: "Y"
	default: "Y"
	information: "Print indications of progress of run"
]


boolean: treeprint [
	additional: "Y"
	default: "Y"
	information: "Print out tree"
]

boolean: ancseq  [
  additional: "Y"
  default: "N"
  information: "Print states at all nodes of tree"
]

boolean: stepbox  [
  additional: "Y"
  default: "N"
  information: "Print out steps in each character"
]

endsection: output
