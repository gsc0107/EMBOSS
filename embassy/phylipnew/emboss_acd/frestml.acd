application: frestml [
  documentation: "Restriction site maximum Likelihood method"
  groups: "Phylogeny:Molecular sequence"
]

section: input [
  information: "Input section"
  type: "page"
]

discretestates: data [
        characters: "01+-?"
	parameter: "Y"
        help: "File containing one or more sets of restriction data"
]

properties: weights [
	additional: "Y"
	characters: "01"
	information: "Weights file"
	help: "Weights file"
        length: "$(data.length)"
        size: "1"
	nullok: "Y"
]

tree: intreefile [
	parameter: "Y"
	nullok: "Y"
	knowntype: "newick"
]

endsection: input

section: output [
  information: "Output section"
  type: "page"
]

outfile: outfile  [
  parameter: "Y"
  knowntype: "restml output"
]

outfile: outtreefile  [
  extension: "treefile"
  information: "Tree file name"
  knowntype: "newick tree"
]

boolean: printdata  [
  additional: "Y"
  default: "N"
  information: "Print data at start of run"
]

boolean: progress  [
  additional: "Y"
  default: "Y"
  information: "Print indications of progress of run"
]

boolean: treeprint  [
  additional: "Y"
  default: "Y"
  information: "Print out tree"
]

boolean: trout  [
  additional: "Y"
  default: "Y"
  information: "Write out trees to tree file"
]

endsection: output

section: additional [
  information: "Additional section"
  type: "page"
]

integer: njumble [
	additional: "Y"
	default: 0
	min: 0
	information: "Number of times to randomise"
]

integer: seed [
	additional: "$(njumble)"
	information: "Random number seed between 1 and 32767 (must be odd)"
	max: 32767
	min: 1
	default: 1
]

integer: outgrno [
	additional: "Y"
	min: "0"  
	max: "$(data.size)"
	default: 0
	information: "Species number to use as outgroup"
]

boolean: allsites  [
  additional: "Y"
  default: "Y"
  information: "All sites detected"
]

boolean: lengths  [
  additional: "$(intreefile.isdefined)"
  default: "N"
  information: "Use lengths from user trees"
]

integer: sitelength  [
  additional: "Y"
  default: "6"
  minimum: "1"
  maximum: "8"
  information: "Site length"
]

boolean: global  [
  additional: "@(!$(intreefile.isdefined))"
  default: "N"
  information: "Global rearrangements"
]


boolean: rough [
	additional: "@(!$(intreefile.isdefined))"
	default: "Y"
	information: "Speedier but rougher analysis"
]
  	

endsection: additional
