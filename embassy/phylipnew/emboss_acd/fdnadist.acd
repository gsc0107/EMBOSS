application: fdnadist [
  documentation: "Nucleic acid sequence Distance Matrix
                  program"
  groups: "Phylogeny:Molecular sequence"
]

section: input [
  information: "Input section"
  type: "page"
]

seqsetall: sequence  [
  parameter: "Y"
  type: "gapdnaphylo"
  help: "File containing one or more sequence alignments"
]

list: method  [
  standard: "y"
  minimum: "1"
  maximum: "1"
  header: "Distance methods"
  values: "f:F84 distance model; 
           k:Kimura 2-parameter distance;
           j:Jukes-Cantor distance; 
           l:LogDet distance;
           s:Similarity table"
  information: "Choose the method to use"
  default: "F84 distance model"
]

list: gamma  [
  additional:  "@( $(method) == { f | k | j } )" 
  minimum: "1"
  maximum: "1"
  header: "Gamma distribution"
  values: "g:Gamma distributed rates;
           i:Gamma+invariant sites;
           n:No distribution parameteres used"
  information: "Gamma distribution"
  default: "No distribution parameteres used"
]

integer: ncategories  [
  additional: "@(@($(method) == { f | k | j } )  &  @($(gamma) == n))"
  default: "1"	
  minimum: "1"
  maximum: "9"
  information: "Number of substitution rate categories"
]

array: rate [
  additional: "@($(ncategories) > 1)"
  information: "Category rates"
  default: "1.0"
  minimum: "0.0"
  size: "$(ncategories)"
  sumtest: "N"
]

properties: categories  [
  additional: "@($(ncategories) > 1)"
  characters: "1-$(ncategories)"
  help: "File of substitution rate categories"
  nullok: "Y"
]

properties: weights  [
  additional: "Y"
  characters: "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  information: "Weights file"
  length: "$(sequence.length)"
  nullok: "Y"
]

endsection: input

section: output [
  information: "Output section"
  type: "page"
]

outfile: outfile  [
  parameter: "Y"
  knowntype: "dnadist output"
]

boolean: printdata  [
  additional: "Y"
  default: "N"
  information: "Print data at start of run"
]

boolean: progress  [
  additional: "Y"
  default: "Y"
  information: "Print indications of progress of run"
]

endsection: output

section: additional [
  information: "Additional section"
  type: "page"
]

float: gammacoefficient [
	additional: "@($(gamma) != n)" 
	information: "Coefficient of variation of substitution rate among sites"
	minimum: "0.001"
	default: "1"
]


float: invarfrac  [
	additional: "@($(gamma)==i)"
	information: "Fraction of invariant sites"
	default: "0.0"
	minimum: "0.0"
	maximum: "0.9999"
]


float: ttratio  [
  additional: "@( @($(method) == f) | @($(method) == k))"
  information: "Transition/transversion ratio"
  default: "2.0"
  minimum: "0.001"
]

toggle: freqsfrom [
  additional: "@($(method) == f)"
  default: "Y"
  information: "Use empirical base frequencies from seqeunce input"
]

array: basefreq [
	additional: "@(!$(freqsfrom))"
	size: "4"
	min: "0.0"
	max: "1.0"
	default: "0.25 0.25 0.25 0.25"
	information: "Base frequencies for A C G T/U (use blanks to separate)"
	sum: 1.0
]

boolean: lower [
	additional: "Y"
	default: "N"
	information: "Lower triangular distance matrix"
]

endsection: additional


 
